.view-online {
  display: none;
  font-size: 0.6rem;
  margin-bottom: 1rem;
  text-decoration: underline;
}

@media print
  .view-online
    display: block


#header
  margin: 0 auto 1rem
  width: 100%

  h1, .h1
    margin-top: 0
    margin-bottom: 0
    color: $color-text
    letter-spacing: .01em
    font-weight: 700
    font-style: normal
    font-size: 1.5rem
    line-height: 2rem

    antialias()

    @media print
      font-size: 24px

  h2, .h2
    border-bottom: 0
    display: inline-block
    margin-top: 0
    text-decoration: none
    color: $color-primary
    antialias()

    @media print
      font-size: 16px

  a
    background: none
    color: inherit
    text-decoration: none

  #logo
    display: inline-block
    float: left
    margin-right: 20px
    width: $logo-width
    height: $logo-height
    border-radius: 5px
    background-size: $logo-width $logo-height
    background-repeat: no-repeat

  #nav
    color: $color-accent-1
    letter-spacing: .01em
    font-weight: 200
    font-style: normal
    font-size: .8rem

    ul
      margin: 0
      padding: 0
      list-style-type: none
      line-height: 15px

      a
        margin-right: 15px
        color: color-accent-1

      a:hover
        underline(5px, $color-accent-1)

      li
        display: inline-block
        margin-right: 15px
        border-right: 1px dotted $color-accent-1
        vertical-align: middle

      .icon
        display: none

      li:last-child
        margin-right: 0
        border-right: 0

        a
          margin-right: 0

#header:hover
  #logo
    filter: none
    -webkit-filter: none

@media screen and (max-width: 480px)
  #header #title
    min-height: $logo-height

  #header #nav
    ul
      a:hover
        background: none

      li
        display: none
        border-right: 0

      li.icon
        position: absolute
        top: 55px
        right: 1rem
        display: inline-block

    ul.responsive
      li
        display: block

    li:not(:first-child)
      padding-top: 1rem
      padding-left: $logo-width + 20px
      font-size: 1rem

.social-links
  margin-bottom: 1rem

  a
    display inline-block
    padding: 0.2rem 0

@media screen and (max-width: 480px)
  .social-links
    a
      margin-left: 0.5rem
      span
        display: none

@media screen and (min-width: 481px)
  .social-links
    a
      width: 32%

@media print
  .social-links
    a
      width: 32%

